<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gr"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="303dp"

        android:layout_height="260dp"
        android:background="@drawable/imgback"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="250dp"
        tools:layout_editor_absoluteY="232dp" />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/imageView2"
        app:layout_constraintRight_toRightOf="@id/imageView2"
        app:layout_constraintLeft_toLeftOf="@id/imageView2"
        android:text="Daxil ol"

        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textStyle="italic"
       android:layout_marginRight="10dp"
        android:onClick="qeydiyyataget"
        android:layout_marginTop="9dp"

        android:textColor="@color/black"
        android:text="Qeydiyyatdan keç"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/etxt2"
        app:layout_constraintRight_toRightOf="@+id/imageView2" />

    <EditText
        android:id="@+id/etxt1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:drawableStart="@drawable/smail"
        android:paddingStart="10dp"
        android:hint="email@gmail.com"
        android:background="@drawable/backedit"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/imageView2"
        app:layout_constraintRight_toRightOf="@id/imageView2"
        app:layout_constraintTop_toTopOf="@id/imageView2"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etxt2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/backedit"
        android:drawableStart="@drawable/spas"
        android:paddingStart="10dp"
        android:hint="pasword"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/imageView2"
        app:layout_constraintLeft_toLeftOf="@id/imageView2"
        app:layout_constraintRight_toRightOf="@id/imageView2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:onClick="qeydiol"
        android:text="Daxil ol"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt2"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#ED1111"
        app:layout_constraintLeft_toLeftOf="@id/imageView2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/imageView2"
        android:text="Email ünvanınızı və parolunuzu daxil edin"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>