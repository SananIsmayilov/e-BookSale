<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    android:orientation="vertical"
    tools:context=".alissatis">
    <Button
        android:layout_width="300dp"
        android:text="Kitab al"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/bbb"
        android:background="@drawable/button"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="alis"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="25sp"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:background="@drawable/button"
        android:onClick="satis"
        android:text="Kitab sat"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/bbb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="38dp"
        android:layout_height="41dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/exit"
        android:backgroundTint="@color/black"
        android:onClick="signoutbtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="@id/button"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toTopOf="@id/button"
        app:layout_constraintBottom_toBottomOf="@id/button"
        android:background="@drawable/mydovn"
        android:onClick="mydovn"
        tools:layout_editor_absoluteX="263dp"
        tools:layout_editor_absoluteY="23dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>